{
  "compilerOptions": {
    "experimentalDecorators": true,
    "target": "es6",
    "lib": [
      "es2021"
    ],
    "module": "commonjs",
    "skipLibCheck": true,
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "outDir": "./dist",
    "baseUrl": "src",
    "sourceMap": true,
    "paths": {
      "@/*": ["*"]
    }
  },
  // "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
